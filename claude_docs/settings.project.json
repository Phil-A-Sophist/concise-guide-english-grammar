{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "{{PYTHON}} claude_docs/bootstrap/migrate_settings.py --session-start"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "{{POST_TOOL_USE_COMMAND}}",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(pretext:*)",
      "Bash(pandoc:*)",
      "Bash(findstr:*)"
    ]
  }
}
